{
  "name": "nodejs-typescript-app",
  "version": "0.3.0",
  "description": "Bootstrap new nodejs typescript projects",
  "main": "index.js",
  "scripts": {
    "clean:dist": "rm -rf ./dist",
    "clean:modules": "rm -rf ./node_modules",
    "clean": "npm run clean:dist && npm run clean:modules",
    "lint": "npx eslint src/**/*.ts",
    "lint:fix": "npx eslint --fix src/**/*.ts && npx eslint --fix test/**/*.ts",
    "prebuild": "npm run lint:fix && npm run clean:dist",
    "build": "tsc",
    "start": "node dist/src/index",
    "pretest": "npm run build",
    "test": "mocha dist/test/**/*.js",
    "local": "npm run build && npm start"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/lodash": "^4.14.188",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.9",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "chai": "^4.3.7",
    "eslint": "^8.27.0",
    "mocha": "^10.1.0",
    "sinon": "^14.0.2",
    "typescript": "^4.8.4"
  }
}
